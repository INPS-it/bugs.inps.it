label.btn-icon.due-date-button.is-editable(
    ng-if="vm.visible()"
    ng-disabled="vm.disabled()"
    ng-style="{background: vm.color()}"
    ng-attr-title="{{ vm.title() }}"
    ng-click="vm.setDueDate()"
    ng-class="{'active': vm.color(), 'disabled': !!vm.disabled()}"
)
    span.hidden {{'COMMON.DUE_DATE.TITLE_ACTION_SET_DUE_DATE' | translate}}
    tg-svg(svg-icon="icon-clock")
