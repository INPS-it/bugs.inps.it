tg-lightbox-close

form
    h2.title(translate="COMMON.NEW_BULK")
    fieldset
        label.hidden(for="new_bulk_textarea") {{'COMMON.NEW_BULK' | translate}}: {{'COMMON.ONE_ITEM_LINE' | translate}}
        textarea(
            id="new_bulk_textarea"
            cols="200"
            wrap="off"
            ng-model="new.bulk"
            data-required="true"
            data-linewidth="200"
            ng-attr-placeholder="{{'COMMON.ONE_ITEM_LINE' | translate}}"

        )
    .lb-action-wrapper
        button.btn-big(
            variant="primary"
            type="submit"
            title="{{'COMMON.SAVE' | translate}}"
            translate="COMMON.SAVE"
        )
